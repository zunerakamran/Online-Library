<!DOCTYPE html>
<html lang="en">
<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title><%-book.title -%> - <%-book.author %></title>
     <%- include('head') %>
</head>
<body>
     <header>
         <%- include('header') %>
     </header>
     <main>
         <div class="container mt-3 mb-5">
             <div class="row mb-4">
                 <div class="col-lg-4 col-md-6 col-sm-12 col-12">
                     <img src="<%- book.image %>" alt="" class="books-details-image">
                     <table class="table table-hover mt-2">
                         <tr>
                             <th>Title</th>
                             <td><%-book.title %></td>
                         </tr>
                         <tr>
                             <th>Author</th>
                             <td><%-book.author %></td>
                         </tr>
                         <tr>
                            <th>Category</th>
                            <td><%-book.category %></td>
                         </tr>
                         <tr>
                             <th>Narrator</th>
                             <td><%-book.narrator %></td>
                         </tr>
                         <tr>
                             <th>Publisher</th>
                             <td><%-book.publisher %></td>
                         </tr>
                         <tr>
                             <th>Release</th>
                             <td><%-book.releasedDate %></td>
                         </tr>
                     </table>
                 </div>
                 <div class="col-lg-8 col-md-6 col-sm-12 col-12">
                     <h1 class="library-heading">
                        <%- book.title %>
                     </h1>
                     <p class="library-text">
                        By :- <b style="color:#F58220; font-size: 26px;"> <%- book.author %> </b>
                     </p>
                     <p class="library-text">
                        Book Added By :- <b style="color:#F58220; font-size: 26px;"> <%- users.username %> </b>
                     </p>
                     <!-- verified text -->
                     <% if (book.userid !== 100) { %>
                       <% if (book.isVerified) { %>
                         <div class="d-flex">
                         <img src="/images/verified.jpg" alt="" width="40px" height="40px">
                         <p class="library-text text-success mt-2">
                             <b>Verifed by admin</b>
                         <p>
                         </div>
                       <% } %>
                     <% } %>
                     
                     <p class="books-detail-text">
                         <%-book.details %>
                     </p>
                     <button class="btn library-button">
                         <a href="<%-book.download %>" download class="gallery-clickable-content">Download Now</a>
                     </button>
                 </div>
             </div>

             <% if (book.isVerified) { %>
                 <div class="row mt-5">
                     <p class="library-heading">Suggested Books</p>
                     <% suggestions.forEach(suggestion => { %>
                         <div class="col-lg-3 col-md-6 col-sm-6 col-6 mt-2">
                             <div class="card">
                                 <img src="<%-suggestion.image %>" class="card-img-top" height="320px" alt="">
                                 <div class="card-body">
                                     <h5 class=" books-title" ><%- suggestion.title %></h5>
                                     <p class="books-author"><%- suggestion.author %></p>
                                     <a href="/books/<%-suggestion.id %>" class="btn library-button mt-4">Explore</a>
                                 </div>
                             </div>
                         </div>
                     <% }) %>
                 <div>
             <% } %>
         </div>
     </main>
     <footer>
         <%- include('footer') %>
     </footer>
     
     <%- include('foot') %>
</body>
</html>