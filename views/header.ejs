 
 <body>
     <%- include('modal') %>
     <nav class="navbar navbar-expand-lg navbar-light">
         <div class="container">
             <a href="/" class="navbar-brand">
                 <img src="/images/logo.png" alt="Logo" class="site-logo">
             </a>
             <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                 <span class="navbar-toggler-icon"></span>
             </button>
             <div class="collapse navbar-collapse" id="navbarNav">
                 <ul class="navbar-nav ms-auto">
                     <li class="nav-item navbar-subcontainer">
                         <a class="nav-link text-dark" href="/">Home</a>
                     </li>
                     <% if (user) { %>
                         <li class="nav-item navbar-subcontainer">
                             <a class="nav-link text-dark" href="/add-book">Add Book</a>
                         </li>
                     <% } %>
                     <li class="nav-item dropdown navbar-subcontainer">
                         <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">Categories</a>
                         <ul class="dropdown-menu">
                             <li>
                                 <a class="dropdown-item text-dark" href="/categories/fiction">
                                     Fiction
                                 </a>
                             </li>
                             <li>
                                 <a class="dropdown-item" href="/categories/children">
                                     Children
                                 </a>
                             </li>
                             <li>
                                 <a class="dropdown-item" href="/categories/history">
                                     History
                                 </a>
                             </li>
                             <li>
                                 <a class="dropdown-item" href="/categories/biography">
                                     Biography
                                 </a>
                             </li>
                             <li>
                                 <a class="dropdown-item" href="/categories/arts">
                                     Arts
                                 </a>
                             </li>
                             <li>
                                 <a class="dropdown-item" href="/categories/all">
                                     All
                                 </a>
                             </li>
                         </ul>
                     </li>
                       
                     <% if (user) { %>
                         <li class="nav-item dropdown navbar-subcontainer">
                             <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown"> <%= username %></a>
                             <ul class="dropdown-menu">
                                 <li>
                                     <a class="dropdown-item" href="/my-books">
                                         My Books
                                     </a>
                                 </li>
                                 <li>
                                     <a class="dropdown-item" href="/pending-books">
                                         Pending Books
                                     </a>
                                 </li>
                                 <% if (username === 'admin') { %>
                                    <li>
                                         <a class="dropdown-item" href="/verified-books">
                                             Verified Books
                                         </a>
                                     </li>
                                 <% } %>
                             </ul>
                         </li>
                     <% } %>
                    
                     <% if (user) { %>
                         <li class="nav-item navbar-subcontainer d-lg-none">
                             <a class="nav-link gallery-clickable-content" onclick="
                             showModal(
                                 'Do you want to logout?',
                                 ()=>{ window.location.href='/logout'},
                                 'btn-primary'
                             )">
                                 Log Out
                             </a>
                         </li>
                     <% } else { %>
                         <li class="nav-item navbar-subcontainer d-lg-none">
                             <a class="nav-link" href="/login">Log In</a>
                         </li>
                     <% } %>
                 </ul>
             
                 <% if (user) { %>
                     <a  class="btn ms-3 library-button d-none d-lg-block" onclick="
                     showModal(
                         'Do you want to logout?',
                         ()=>{ window.location.href='/logout'},
                         'btn-primary'
                     )">
                         Log Out
                     </a>

                 <% }  else { %>
                     <a href="/login" class="btn ms-3 library-button d-none d-lg-block">
                         Log In
                     </a>
                 <% } %>
             </div>
         </div>
     </nav>
     <%- include('foot') %>
 </body>
 